# AI Gallery Environment Configuration
# Copy this file to .env and customize for your setup

# Media and file paths
MEDIA_FOLDER=./media
THUMBNAIL_FOLDER=./thumbnails

# Model configuration
MODEL_NAME=clip-ViT-B-32
DEVICE=cpu  # or cuda for GPU acceleration

# File extensions (comma-separated)
IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.bmp,.tiff,.heic
VIDEO_EXTENSIONS=.mp4,.avi,.mov,.mkv

# Indexing settings
DEFAULT_FRAMES_TO_EXTRACT=10
THUMBNAIL_SIZE=400,400

# Search defaults
DEFAULT_TOP_K=50
DEFAULT_THRESHOLD=0.2

# Server settings
HOST=0.0.0.0
PORT=8000

# Index files
INDEX_FILE_EMBEDDINGS=indexed_embeddings.pt
INDEX_FILE_FILENAMES=indexed_filenames.json
INDEX_FILE_METADATA=indexed_files_metadata.json
